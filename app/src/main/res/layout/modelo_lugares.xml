<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/keylines"
    android:layout_marginLeft="@dimen/keylines"
    android:layout_marginRight="@dimen/keylines"
    android:layout_height="@dimen/card_height_lugares">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/card_height_lugares"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/bares"
            android:scaleType="center"
            android:id="@+id/imageview_cover"/>

        <TextView
            android:textStyle="bold"
            android:text="Hello"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_toRightOf="@+id/imageview_cover"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_height="wrap_content"
            android:textSize="@dimen/article_titles"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/textview_cover"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>