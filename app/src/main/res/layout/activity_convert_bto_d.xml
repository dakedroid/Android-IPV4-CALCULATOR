<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginStart="@dimen/md_keylines"
        android:layout_marginEnd="@dimen/md_keylines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/md_keylines"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/edtx_numero_binario"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="8"
                android:digits="01"
                android:maxLength="8"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:hint="11111111"/>

            <TextView
                android:text="."
                android:layout_marginBottom="3dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/edtx_binario_2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="8"
                android:digits="01"
                android:maxLength="8"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:hint="11111111"/>

            <TextView
                android:text="."
                android:layout_marginBottom="3dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/edtx_binario_3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="8"
                android:digits="01"
                android:maxLength="8"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:hint="11111111"/>

            <TextView
                android:text="."
                android:layout_marginBottom="3dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:gravity="center"
                android:textSize="16dp"
                android:id="@+id/edtx_binario_4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="8"
                android:digits="01"
                android:maxLength="8"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:hint="11111111"/>

        </LinearLayout>



        <Button
            android:id="@+id/btn_convertir"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginTop="@dimen/md_keylines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convertir" />

        <Button
            android:id="@+id/btn_limpiar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Limpiar Campos" />

        <TextView
            android:id="@+id/textView"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:textSize="20dp"
            android:text="Resultado" />

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">


            <TextView
                android:id="@+id/txv_resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/md_keylines"
                android:text=""
                android:textSize="14dp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_above="@+id/txv_resultado"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/keylines"
                android:background="@color/colorAccent" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/txv_resultado"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/keylines"
                android:background="@color/colorAccent" />

            <View
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/view"
                android:layout_centerVertical="true"
                android:background="@color/colorAccent" />

            <View
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/view2"
                android:layout_centerVertical="true"
                android:background="@color/colorAccent" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
